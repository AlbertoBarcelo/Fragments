<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Primer LinearLayout para los botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_fragment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrar Fragment 1" />

        <Button
            android:id="@+id/button_fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mostrar Fragment 2" />
    </LinearLayout>

    <!-- Segundo LinearLayout para los fragmentos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <FrameLayout
            android:id="@+id/fragment_container_1"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/fragment_container_2"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>